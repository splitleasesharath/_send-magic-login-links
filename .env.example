# Application URL
NEXT_PUBLIC_APP_URL=https://splitlease.com

# Database Configuration
# Replace with your actual database credentials
DATABASE_URL=postgresql://user:password@localhost:5432/splitlease

# Email Service (e.g., SendGrid, Mailgun)
EMAIL_SERVICE_API_KEY=your_email_service_api_key
EMAIL_FROM_ADDRESS=noreply@splitlease.com

# SMS Service (e.g., Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Security
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=10
RATE_LIMIT_WINDOW_MS=60000

# Magic Link Configuration
MAGIC_LINK_EXPIRATION_HOURS=24
